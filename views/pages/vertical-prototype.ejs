<!DOCTYPE html>
<html>
    <title></title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/index.css">
    <script src="/jquery/jquery.js"></script>
    <% include ../partials/style.ejs %>
    <!-- Function to show search results -->
    <script>
    $( document ).ready(function() {
    <% for (var i = 0; i < searchResult.length; i++) { %>
    document.getElementById('result').innerHTML += `<img src="/images/StockPhotos/Thumbnails/<%= searchResult[i] %>" style="width:100px; height:100px;"><br>`;
    <% } %>
    });
    </script>
    <body>
        <%- include ../partials/nav.ejs %>
        
        <!-- !PAGE CONTENT! -->
        <div class="w3-content" style="max-width:1500px">
            <!-- Header -->
            <div class="w3-opacity">
                <div class="w3-clear"></div>
                <header class="w3-center w3-margin-bottom">
                    <h1><b>Team 04 Vertical Prototype</b></h1>
                </header>
            </div>
        </div>
        <!-- Search Bar -->
        <form>
            <input id= "search" type="text" name="search" value="<%= searchTerm %>" placeholder="Search...">
            <!-- Category Dropdown. Remembers the previous search using EJS -->
            <select name ="category" onchange="this.form.submit()">
                <option value="">All Categories</option>
                <option value="Nature" <% if (category == "Nature") { %> selected <% } %> >Nature</option>
                <option value="Animals" <% if (category == "Animals") { %> selected <% } %> >Animals</option>
            </select>
        </form>
        <h3>Search for "tree", "lightning", "bear", "giraffe", "bird", "moon", or "city".</h3>

        <!-- This checks how many results are returned and displayed. -->
        <% if (searchTerm != undefined) { %>
            <p><%= results %> of <%= results %> results displayed.</p>
        <% } %>

        <!-- Search Results -->
        <div class="row">
            <div class="column" id="result">
            </div>
        </div>
        
        <!-- Footer -->
        <footer class="w3-container w3-padding-64 w3-light-grey w3-center w3-opacity w3-xlarge" style="margin-top:128px">
            <i class="fa fa-facebook-official w3-hover-opacity"></i>
            <i class="fa fa-instagram w3-hover-opacity"></i>
            <i class="fa fa-snapchat w3-hover-opacity"></i>
            <i class="fa fa-pinterest-p w3-hover-opacity"></i>
            <i class="fa fa-twitter w3-hover-opacity"></i>
            <i class="fa fa-linkedin w3-hover-opacity"></i>
        </footer>
        
        <script>
        // Open and close sidebar. I condensed the previous functions into one that just toggles the sidebar.
        function toggleNav() {
        if ( typeof toggleNav.open == 'undefined' ) {
        toggleNav.open = true;
        }
        toggleNav.open = !toggleNav.open;
        document.getElementById("mySidenav").style.width = toggleNav.open ? "500px" : "0";
        }
        </script>
    </body>
</html>